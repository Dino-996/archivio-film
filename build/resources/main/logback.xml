<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
    
    <logger name="it.dev.film.v1" level="DEBUG"/>
    <logger name="it.dev.film.v1.modello" level="TRACE"/>
    <logger name="it.dev.film.v1.vista" level="TRACE"/>
    <logger name="it.dev.film.v1.controllo" level="TRACE"/>
    
</configuration>